{
    "scenarioName": "Register a parkRunner and then fetch details of newly created park runner.",
    "steps": [
	       {
	        "name": "registration_at_ParkRun",
            "url": "/parkrun/api/v1/runners/",
            "operation": "POST",
            "request": {
            	 "body": {
		        "firstName": "John",
		        "lastName": "Keier",
		        "gender": "M",
		        "homeRun": "Knutsford",
		        "runningClub": "RunMachine",
		        "email":"runme@park.com",
		        "postCode": "LW8999"
				}
              },
            "assertions": {
                "status": 201,
                "body": {
                    "location" : "$NOT.NULL",
                    "parkRunId" : "$NOT.NULL"
                }
            }
       
	       },
	       
	       {
	       		
	        "name": "get_ParkRunner_by_parkRunId",
            "url": "/parkrun/api/v1/runners/${$.registration_at_ParkRun.response.body.parkRunId}",
            "operation": "GET",
            "request": {
        	  
              },
            "assertions": {
                "status": 200,
                "body": 
                
                 {
                    "parkRunId": "$NOT.NULL"
                 }
                
                
                
            }
       
	       
	       
	       }
    
    ]
    
    
}